---
import { Image } from "astro:assets";
import logo from "@/assets/logo.png";
---

<header class="flex items-center justify-between px-8 py-5 text-white">
    <a class="logo flex items-center justify-between" href="/">
        <Image src={logo} alt="logo" width={100} height={100} />
        <span class="text-lg">AdventJS - LERF</span>
    </a>

    <nav>
        <ul class="flex items-center justify-center gap-12 text-2xl">
            <li>
                <a class="hover:text-yellow-300 transition-all" href="/"
                    >Inicio</a
                >
            </li>
            <li>
                <a
                    class="hover:text-yellow-300 transition-all"
                    href="/#problemas">Problemas</a
                >
            </li>
            <li>
                <a class="hover:text-yellow-300 transition-all" href="/acercaDe"
                    >Acerca de</a
                >
            </li>
        </ul>
    </nav>
</header>
