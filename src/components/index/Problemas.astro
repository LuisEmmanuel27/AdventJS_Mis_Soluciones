---
import { contenidoCards } from "@/scripts/contenidoCards";
---

<section id="problemas" class="min-h-screen px-5 py-10">
    <h1 class="text-center text-yellow-400 text-7xl uppercase">Problemas</h1>

    <section class="grid">
        {
            contenidoCards.map((card) => {
                return (
                    <a class="card" href={`problemas/${card.id}`}>
                        <div class="card-header">
                            <h2 class="text-2xl text-yellow-400">
                                {card.titulo}
                                {card.id}
                            </h2>
                        </div>
                        <div class="card-body">
                            <p class="text-gray-400">{card.imagen}</p>
                        </div>
                    </a>
                );
            })
        }
    </section>
</section>
